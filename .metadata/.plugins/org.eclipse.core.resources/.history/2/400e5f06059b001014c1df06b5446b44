package PrimeiroProjeto;

import java.util.Scanner;

public class lista16 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Scanner sc = new Scanner(System.in);
		
		//1 - Criando um vetor de cores
		String[] frutas = new String[6];
		for(int i= 0; i < 6; i++) {
			System.out.println("Digite a cor:");
			System.out.print("Cores["+i+"]: ");
			frutas[i] = sc.next();
		}
			for(int i= 0; i < 6; i++) { 
				System.out.println(frutas[i]);
				
			}
		System.out.println("--------------------------");
		//2 - Vetor de números decimais
			
		
		
		//3 - Mostrando apenas os pares
			int n;
			System.out.println("Digite um número:");
			n = scanner.nextInt();
			for(int i = 0; i <= n; i+= 2) {
				System.out.println(i);
				}
		
		
		//4 - Menores que 50
		
		
		//5 - Procurando um nome no vetor
			String[] x = new String[5];
			for (int i = 0; i < 7; i++) {
				System.out.println("Digite um número (" + (i + 1) + "): ");
				x[i] = sc.next();
			}
			System.out.println("Digite um número para procurar: ");
			int procurar = sc.next();
			boolean achou = false;
			for (int i = 0; i < 7; i++) {
				if (x[i] == procurar) {
					achou = true;
					break;
				}
			}
		
		//6 - Produto e preço
		
		
		//7 - Verificação de notas
		
		
		//8 - Promoção de ingressos
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
