package PrimeiroProjeto;

import java.util.Scanner;

public class lista16 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Scanner sc = new Scanner(System.in);
		
		//1 - Criando um vetor de cores
		String[] cor = new String[6];
		for(int i= 0; i < 6; i++) {
			System.out.println("Digite a cor:");
			System.out.print("Cores["+i+"]: ");
			cor[i] = sc.next();
		}
			for(int i= 0; i < 6; i++) { 
				System.out.println(cor[i]);
				
			}
		System.out.println("--------------------------");
		
		
		//2 - Vetor de números decimais
		double[] na = new double[8]; 

        for (int i = 0; i < na.length; i++) {
            System.out.print("Digite o número decimal " + (i + 1) + ": ");
            na[i] = sc.nextDouble();
        }

        for (int i = 0; i < na.length; i++) {
            System.out.println("Posição [" + i + "] = " + na[i]);
        }
			
		System.out.println("--------------------------");
		
		
		//3 - Mostrando apenas os pares
		 int[] numeros = new int[10];
		 
	        for (int i = 0; i < 10; i++) {
	            System.out.println("Digite o número " + (i + 1) + ":");
	            numeros[i] = scanner.nextInt();
	        }

	        System.out.println("Números pares digitados:");
	        for (int i = 0; i < 10; i++) {
	            int n = numeros[i];
	            if (n % 2 == 0) {
	                System.out.println(n);
	            }
	        }
	        
	        System.out.println("--------------------------");

		
	        
		//4 - Menores que 50
	        int[] numeros12 = new int[12]; 
	        for (int i = 0; i < 12; i++) {
	            System.out.print("Digite um número (" + (i + 1) + "): ");
	            numeros12[i] = sc.nextInt();
	            if (numeros12[i] < 50) {
	                System.out.println(numeros12[i] + " é menor que 50");
	            }
	        }
		
	        System.out.println("--------------------------");
	        
	        
		//5 - Procurando um nome no vetor
			String[] nomes = new String[5];
			 for (int i = 0; i < 5; i++) {
		            System.out.print("Digite o nome " + (i + 1) + ": ");
		            nomes[i] = sc.next();
		        }
			 
			 System.out.print("Digite um nome para procurar: ");
		        String procurar = sc.next();
		        boolean achou = false;
		        for (int i = 0; i < 5; i++) {
		            if (nomes[i].equalsIgnoreCase(procurar)) {
		            	achou = true;
		            	System.out.println("Achou!");
		                break;
		            }
		        }
		        System.out.println("--------------------------");
		        
		        
		//6 - Produto e preço
		        
		        String[] nome = new String[4];
		        double[] precos = new double[4];
		    
		        for (int i = 0; i < 4; i++) {
		            System.out.println("Digite o nome do produto " + (i + 1) + ":");
		            nome[i] = scanner.next();

		            System.out.println("Digite o preço do produto " + (i + 1) + ":");
		            precos[i] = scanner.nextDouble();
		            scanner.next();
		        }
		        
		        System.out.println("Produtos cadastrados:");
		        for (int i = 0; i < 4; i++) {
		            System.out.printf("O produto %s custa R$%.2f", nomes[i], precos[i]);
		        }

		        
		        System.out.println("--------------------------");
		        
		       
		//7 - Verificação de notas
		        double[] notas = new double[6];
				for(int i= 0; i < 6; i++) {
					System.out.println("Digite sua nota[" + i + "]: ");
					notas[i] = sc.nextDouble();
				}
					for(int i= 0; i < 6; i++) { 
						System.out.println("Nota " + notas[i] + " - ");
						
					
					
					 if (notas[i] < 6) {
			                System.out.println("Aluno reprovado");
			            } else if (notas[i] < 7) {
			                System.out.println("Aluno em recuperação");
			            } else {
			                System.out.println("Aluno aprovado");
			            }
			        }
	
		System.out.println("--------------------------");
		
		
		//8 - Promoção de ingressos
		
		 double[] ingressos = new double[5];
	     for (int i = 0; i < ingressos.length; i++) {
	     System.out.print("Digite o preço do ingresso " + (i + 1) + ": ");
		  ingressos[i] = sc.nextDouble();
			        }
           System.out.println("Verificando ingressos...");
			    for (double preco : ingressos) {
		    if (preco > 100) {
			                System.out.println("Ingresso de R$" + preco + " -> Promoção disponível!");
			            }
			        }
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
